<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--start dashboard-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <!-- row1 : Blood Pressure -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_bp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="@color/color00ADFF"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:clickable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="123"
                                android:textSize="50sp"
                                android:textColor="@color/White"
                                android:gravity="center"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="mmHg"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="@color/White"
                                android:gravity="end"
                                android:layout_marginVertical="5dp"
                                android:layout_marginHorizontal="15dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="SYS"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:textColor="@color/White"
                                android:textAlignment="center"
                                android:layout_marginTop="10dp" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="83"
                                android:textColor="@color/White"
                                android:textSize="50sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="mmHg"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="@color/White"
                                android:gravity="end"
                                android:layout_marginVertical="5dp"
                                android:layout_marginHorizontal="15dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="DIA"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:textColor="@color/White"
                                android:textAlignment="center"
                                android:layout_marginTop="10dp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <!--Show button for bp fuction-->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:gravity="bottom"
                    app:cardBackgroundColor="@color/color00ADFF">

                    <LinearLayout
                        android:id="@+id/expandableViewBP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1">

                            <Button
                                android:id="@+id/btn_historyBP"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="5dp"
                                android:background="@drawable/btn_white_solid"
                                android:fontFamily="@font/mitr"
                                android:text="ประวัติ"
                                android:textColor="@color/color004160"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center">

                            <Button
                                android:id="@+id/btn_adddataBP"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/btn_white_solid"
                                android:fontFamily="@font/mitr"
                                android:text="กรอกข้อมูล"
                                android:textColor="@color/color95C5DC"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center">

                            <Button
                                android:id="@+id/btn_addBT_BP"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/btn_white_solid"
                                android:fontFamily="@font/mitr"
                                android:text="ซิงค์กับบลูทูธ"
                                android:textColor="@color/Theme"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginHorizontal="5dp"/>


                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

</LinearLayout>
</LinearLayout>