<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--start header-->
            <LinearLayout
                android:id="@+id/layout-header"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/header_pr">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="55.84dp"
                        android:layout_gravity="end"
                        android:src="@drawable/logo_white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="30dp"
                        android:fontFamily="@font/mitr"
                        android:text="เพิ่มข้อมูล"
                        android:textColor="@color/White"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
            <!-- end header -->

            <!-- sync bluetooth blood pressure data -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp">

                <Button
                    android:id="@+id/info_bt_pr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="#00FFFFFF"
                    android:text="วิธีการใช้งาน"
                    android:textColor="@color/color9F3E01"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:padding="10dp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="30dp">
                <Button
                    android:id="@+id/start_sync_pr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_update_pr"
                    android:text="เริ่มการเชื่อมต่อข้อมูล"
                    android:textColor="@color/White"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:fontFamily="@font/mitr"
                    android:padding="20dp"
                    android:layout_marginVertical="30dp"/>
        </LinearLayout>





        </LinearLayout>
    </ScrollView>
</LinearLayout>